<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.shape.Circle?>
<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml" stylesheets="/css/main.css">
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="New..."/>
                <MenuItem text="Open..."/>
                <SeparatorMenuItem/>
                <MenuItem text="Save"/>
                <MenuItem text="Save as..."/>
            </Menu>
        </MenuBar>
    </top>

    <left>
        <BorderPane fx:id="paneLeft" prefWidth="200">
            <center>
                <VBox>
                    <TitledPane text="Elements">
                        <VBox>
                            <Label contentDisplay="TOP" text="blubber">
                                <graphic>
                                    <Group>
                                        <Rectangle width="10" height="10" fill="red"/>
                                        <Circle radius="5" fill="blue"/>
                                    </Group>
                                </graphic>
                            </Label>
                            <Button fx:id="buttonTest" text="test"/>
                            <ImageView fx:id="imageView">
                                <image>
                                    <Image url="/test.png"/>
                                </image>
                            </ImageView>
                        </VBox>
                    </TitledPane>
                </VBox>
            </center>
            <bottom>
                <TitledPane text="Properties">
                    <Button text="test"/>
                </TitledPane>
            </bottom>
        </BorderPane>
    </left>

    <bottom>
        <HBox fx:id="barBottom">
            <Label fx:id="labelLastSave" text="never"/>
        </HBox>
    </bottom>

    <right>
        <Pane fx:id="paneRight" prefWidth="200">

        </Pane>
    </right>

    <center>
        <Label fx:id="labelInfo" textAlignment="LEFT"/>
    </center>

</fx:root>