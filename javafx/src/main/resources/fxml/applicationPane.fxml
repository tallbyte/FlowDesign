<?import com.tallbyte.flowdesign.javafx.pane.DiagramPane?>
<?import com.tallbyte.flowdesign.javafx.pane.FactoryPane?>
<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml" stylesheets="/css/main.css">
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="New Project..."/>
                <MenuItem text="Open..."/>
                <MenuItem text="Add Environment..." onAction="#addEnvironment"/>
                <MenuItem text="Add Flow..." onAction="#addFlow"/>
                <SeparatorMenuItem/>
                <MenuItem text="Save"/>
                <MenuItem text="Save as..."/>
            </Menu>
        </MenuBar>
    </top>

    <left>
        <BorderPane fx:id="paneLeft">
            <top>
                <TreeView fx:id="treeProject"/>
            </top>
        </BorderPane>
    </left>

    <right>
        <BorderPane fx:id="paneRight">
            <center>
                <VBox>
                    <TitledPane text="Elements">
                        <FactoryPane fx:id="paneFactory"/>
                    </TitledPane>
                </VBox>
            </center>
            <bottom>
                <TitledPane text="Properties">
                    <Button text="test"/>
                </TitledPane>
            </bottom>
        </BorderPane>
    </right>

    <bottom>
        <HBox fx:id="barBottom">
            <Label fx:id="labelLastSave" text="never"/>
        </HBox>
    </bottom>

    <center>
        <ScrollPane fx:id="scrollPaneContent" pannable="true">
            <DiagramPane fx:id="paneDiagram"/>
        </ScrollPane>
    </center>

</fx:root>