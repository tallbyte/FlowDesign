<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml" stylesheets="/css/main.css">

    <center>
        <GridPane styleClass="propertySheet">
            <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="textFieldName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="Directory" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="textFieldDirectory" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button text="Choose..." onAction="#onChoose" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        </GridPane>
    </center>

</fx:root>